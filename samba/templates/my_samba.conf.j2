[global]
    unix extensions = no
    getwd cache = yes
    large readwrite = yes
    load printers = no
    printing = bsd
    printcap name = /dev/null
    disable spoolss = yes

[Share]
    path = {{ samba_share_dir }}
    browsable = yes
    guest ok = yes
    read only = no
    create mask = 0644
    directory mask = 0755
    force user = {{ my_user }}
    force group = {{ my_group }}
    follow symlinks = yes
    wide links = yes
